#
# EditorConfig is awesome: http://EditorConfig.org
#
# This file is for unifying the coding style for different editors and IDEs.
#

# Top-most EditorConfig file?
root = true

#
# Global
#

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
indent_style = tab
indent_size = 4
tab_width = 4
curly_bracket_next_line = true

#
# Python
#

[*.py]
charset = utf-8
indent_style = space
indent_size = 4

#
# Sass
#

[*.{sass,scss}]
indent_style = space
indent_size = 2

#
# CSS
#

[*.css]
indent_style = tab
indent_size = 2

#
# HTML
#

[*.html]
indent_style = tab
indent_size = 2

#
# XML
#

[*.xml]
indent_style = space
indent_size = 2

#
# JavaScript
#

[*.js]
charset = utf-8
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

#
# JSON
#

[*.json]
indent_style = space
indent_size = 2

#
# YAML
#

[*.yml]
indent_style = space
indent_size = 2

#
# Ruby
#

[*.{rb},Rakefile,Gemfile,Gemfile.lock]
indent_style = space
indent_size = 2

#
# Shell
#

[*.{sh,zsh}]
indent_style = tab
indent_size = 4

#
# Markdown
#

[*.{md,markdown,mmd,mdown,markdn}]
indent_size = 4
trim_trailing_whitespace = false

#
# Miscellaneous files
#

[.travis.yml]
indent_style = space
indent_size = 2

[ChangeLog]
indent_size = 8

#
# JQuery
#

[jquery.expander.js]
indent_style = space
indent_size = 2

[jquery.pagination.js]
indent_style = tab
