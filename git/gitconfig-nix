[alias]
  switch = !legit switch \"$@\"
  branches = !legit branches
  sprout = !legit sprout \"$@\"
  unpublish = !legit unpublish \"$@\"
  harvest = !legit harvest \"$@\"
  sync = !legit sync \"$@\"
  publish = !legit publish \"$@\"
  graft = !legit graft \"$@\"

  #
  # Change to working directory to the root of the git repo.
  #
  # @usage
  #   git root
  #
  root = !pwd -P

  #
  # Diffs the changes git stash would apply.
  #
  # @usage
  #   git stash-diff <stash-number>
  # @arg 1 {number}
  #   The stash number to rename; e.g., to rename stash@{1}, use 1.
  #
  stash-diff = "!_() { git stash show -p \"stash@{$1}\"; }; _"

  #
  # Renames the provided stash.
  # http://stackoverflow.com/a/25935360/256429
  #
  # @usage
  #   git stash-rename <stash-number> [<description>]
  # @arg 1 {number}
  #   The stash number to rename; e.g., to rename stash@{1}, use 1.
  # @arg 2 {string} [description]
  #   The text to rename the stash to.
  #
	stash-rename = "!_() { rev=$(git rev-parse \"stash@{$1}\") && git stash drop \"stash@{$1}\" || exit 1; git stash store -m \"$2\" $rev; }; _"

  #
  # Removes all local branches that have already been merged into master.
  # http://stackoverflow.com/a/16906759/256429
  #
  # @usage
  #   git rm-merged-branches
  #
  rm-merged-branches = git branch --merged master | grep -v 'master$' | xargs git branch -d
[apply]
  whitespace = nowarn
[branch]
  autosetupmerge = true
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  commit = green
  frag = magenta
  meta = yellow
  new = green
  old = red
  whitespace = white reverse
[color "diff-highlight"]
  oldNormal = red
  oldHighlight = red 52
  newNormal = green
  newHighlight = green 22
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
  branch = magenta
[commit]
  template = ~/.gitmessage
[core]
  autocrlf = input
  editor = nvim -c startinsert
  excludesfile = ~/.gitignore_global
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[credential]
	helper = cache --timeout=3600
[diff]
  tool = vimdiff
  mnemonicprefix = true # Git diff will use (i)ndex, (w)ork tree, (c)ommit and (o)bject instead of a/b/c/d as prefixes for patches
[diff "spaceman-diff"]
  command = /usr/local/bin/spaceman-diff
[difftool]
  prompt = false
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool "sourcetree"]
	cmd = /usr/local/bin/ksdiff -w \"$LOCAL\" \"$REMOTE\"
	path =
[filter "hawser"]
  clean = git hawser clean %f
  smudge = git hawser smudge %f
  required = true
[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true
[filter "media"]
  required = true
  clean = git media clean %f
  smudge = git media smudge %f
[filter "trimWhitespace"]
  clean = git-stripspace %f
[format]
  pretty = format:%C(blue)%ad%Creset %C(yellow)%h%C(green)%d%Creset %C(blue)%s %C(magenta) [%an]%Creset
[merge]
	conflictstyle = diff3
  tool = vimdiff
  summary = true
  verbosity = 1
[mergetool]
  prompt = false
  keepBackup = true
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true
[mergetool "sourcetree"]
	cmd = /usr/local/bin/ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
[pager]
  diff = diff-so-fancy
  show = diff-so-fancy
[pager "diff-so-fancy"]
  cmd = diff-so-fancy | less --tabs=4 -RFX --pattern '^(Date|added|deleted|modified): '
[push]
  default = current
[rerere] # Remember my merges http://gitfu.wordpress.com/2008/04/20/git-rerere-rereremember-what-you-did-last-time/
  enabled = true

# Rewrites Github repo paths
[url "git@github.com:"]
	insteadOf = "gh:"
	insteadOf = "git://github.com"
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"
    pushInsteadOf = "https://github.com/"

# Rewrites Github Gist repo paths
[url "git@gist.github.com:"]
	insteadOf = "gst:"
	pushInsteadOf = "gist:"
	pushInsteadOf = "git://gist.github.com/"
	pushInsteadOf = "https://gist.github.com/"

