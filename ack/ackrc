#
# Check for a local ackrc file
#

export ACKRC=".ackrc"

#
# Be smart about case-sensitivity
#

--smart-case

#
# Flush output immediately, even when piped
#

--flush

#
# Force color and header, even in less -R
#

--color
--color-filename=blue
--color-match=magenta
--color-lineno=white

#
# Additions
#

# Ruby
--type-set=rdoc:.rdoc
--type-set=slim:.slim
--type-set=haml:.haml
--type-add=ruby:.haml,.builder,.rake

# Python
--type-set=py:.py
--type-add=python:.cpy,.vpy

# JavaScript
--type-set=coffee:.coffee
--type-add=js:.coffee

# Markdown
--type-set=markdown:.markdown,.md,.mdown,.mmd

# CSV files
--type-set=csv=.txt,.csv,.tsv

# Cucumber
--type-set=cucumber:.feature

# Web
--type-set=web=.css,.htm,.html,.php,.phtml,.js

# Actionscript
--type-set=actionscript=.as

# CSS
--type-add=sass:.sass,.scss

# Fonts
--type-add=font:ext:.otf,.ttf

#
# Sort the files lexicographically for clarity
#

--group
--sort-files

#
# Ignore
#

--ignore-dir=node_modules
--ignore-dir=log

